<Window x:Class="Basketball_Card_Tracker.Views.NumberedWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Basketball_Card_Tracker.Views"
        xmlns:local1="clr-namespace:Basketball_Card_Tracker.Converters"
        mc:Ignorable="d"
        Title="Numbered/AU/JSY Cards"
        Height="450"
        Width="800"
        Closed="Close">
    
    <Window.Resources>
        <local1:NumberConverter x:Key="NumberConverter" />
    </Window.Resources>
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*" />
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="10*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        
        <Button Content="Add Card"
                Grid.Column="0"
                Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Padding="3"
                Margin="5"
                Click="OpenAddCard" />
        
        <DockPanel Grid.Column="1"
                   Grid.Row="0"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   Width="400"
                   LastChildFill="True">
            
            <Label>Search Player</Label>
            <TextBox TextChanged="SearchBox_TextChanged" 
                     TextAlignment="Left"
                     VerticalAlignment="Center"/>
            
        </DockPanel>
        
        <Button Content="Remove Card"
                Grid.Column="5"
                Grid.Row="0"
                HorizontalAlignment="Right"
                VerticalAlignment="Center"
                Padding="3"
                Margin="5"
                Click="RemoveSelected" />

        <!--<Label Content="Insert"
               Grid.Column="0"
               Grid.Row="1"
               HorizontalAlignment="Left"
               VerticalAlignment="Bottom" />
        <Label Content="Serial"
               Grid.Column="1"
               Grid.Row="1"
               HorizontalAlignment="Center"
               VerticalAlignment="Bottom" />
        <Label Content="Player"
               Grid.Column="2"
               Grid.Row="1"
               HorizontalAlignment="Left"
               VerticalAlignment="Bottom" />
        <Label Content="Parallel"
               Grid.Column="3"
               Grid.Row="1"
               HorizontalAlignment="Left"
               VerticalAlignment="Bottom" />
        <Label Content="Numbered To"
               Grid.Column="4"
               Grid.Row="1"
               Grid.ColumnSpan="2"
               HorizontalAlignment="Left"
               VerticalAlignment="Bottom" />
        <Label Content="Seller"
               Grid.Column="5"
               Grid.Row="1"
               HorizontalAlignment="Center"
               VerticalAlignment="Bottom" />
        <Label Content=""
               Grid.Column="6"
               Grid.Row="1"
               HorizontalAlignment="Center"
               VerticalAlignment="Bottom" />-->

        <DataGrid Grid.Row="2"
                  Grid.ColumnSpan="6"
                  Margin="5, 0, 5, 5"
                  ItemsSource="{Binding Cards}"
                  AutoGenerateColumns="False"
                  SelectionMode="Extended"
                  SelectionChanged="DataGrid_SelectionChanged"
                  GridLinesVisibility="None"
                  RowHeaderWidth="0">
            <!--HeadersVisibility="None"-->
            <DataGrid.Columns>
                <DataGridTextColumn Binding="{Binding Insert}"
                                    x:Name="col1"
                                    IsReadOnly="True"
                                    Width="3*"
                                    Header="Insert">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment"
                                    Value="Left" />
                            <Setter Property="Margin"
                                    Value="0, 0, 0, 0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Serial}"
                                    IsReadOnly="True"
                                    Width="1*"
                                    Header="Serial">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Player}"
                                    IsReadOnly="True"
                                    Width="5*"
                                    Header="Player">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment"
                                    Value="Left" />
                            <Setter Property="Margin"
                                    Value="10, 0, 0, 0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Parallel}"
                                    IsReadOnly="True"
                                    Width="2*"
                                    Header="Parallel">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment"
                                    Value="Left" />
                            <Setter Property="Margin"
                                    Value="0, 0, 0, 0" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Numbered, Converter={StaticResource NumberConverter}}"
                                    IsReadOnly="True"
                                    Width="1.4*"
                                    Header="Numbered To">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="TextBlock">
                            <Setter Property="HorizontalAlignment"
                                    Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Binding="{Binding Seller}"
                                    Width="3*"
                                    Header="Seller" />
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Window>
